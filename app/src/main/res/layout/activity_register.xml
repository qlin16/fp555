<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.gdou.movieshop.registerActivity">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/icon_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="User SignUp"
        android:textColor="#333333"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbg_gary">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@drawable/editbg_gary">
            <TextView
                android:id="@+id/tv_86"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="account"
                android:textColor="#515151"
                android:textSize="12sp" />

            <EditText
                    android:id="@+id/et_userid"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_86"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="please enter account"
                    android:textSize="13sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@drawable/editbg_gary">

            <TextView
                android:id="@+id/tv_y"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="passwd"
                android:textColor="#515151"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_y"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="please enter passwd"
                android:inputType="textPassword"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@drawable/editbg_gary">

            <TextView
                android:id="@+id/tv_yy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="RePassword"

                android:textColor="#515151"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_againpsd"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_yy"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="please enter duplicate password"
                android:inputType="textPassword"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@drawable/editbg_gary">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="username"
                android:textColor="#515151"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_username"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="please enter username"
                android:inputType="text"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/editbg_gary">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="mobile"
                android:textColor="#515151"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_phone"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="please enter mobile"
                android:inputType="phone"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
    <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_select"
            android:enabled="false"
            android:textColor="@color/colorWhite"
            android:text="sign up"/>
    <Button
        android:id="@+id/bt_back"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bt_select"
        android:textColor="@color/colorWhite"
        android:text="return" />



</LinearLayout>
